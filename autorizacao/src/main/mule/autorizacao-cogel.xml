            </ee:message>
        </ee:transform>
		<error-handler >
			<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="87c07e7b-20e9-431b-9266-4ced8e6ec540" type="LDAP:NAME_ALREADY_BOUND">
				<logger level="INFO" doc:name="Logger" doc:id="30c2916d-70aa-4c3f-b12e-eb55b156b830" message='#["nao foi cadastrado - erro!"]' />
				<ee:transform doc:name="Copy_of_Transform Message" doc:id="0163e63f-d4cf-4617-8894-2a43a6b7da7e" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd" >
					<ee:message >
						<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
  message: "Nao foi possivel efetuar o cadastro."
