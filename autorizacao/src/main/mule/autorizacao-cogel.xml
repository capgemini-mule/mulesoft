	<flow name="get:\userinfo\(email):MobileAPP-Cogel-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" doc:id="5b90096b-5415-49c1-b83f-89b25dab175b">
            <ee:variables>
                <ee:set-variable variableName="email"><![CDATA[attributes.uriParams.'email' ]]></ee:set-variable>
            </ee:variables>
        </ee:transform>
        <ldap:lookup doc:name="Lookup" doc:id="0f53536f-218d-4a86-8655-92848ddcd2d6" config-ref="LDAP_Configuration" dn="#[&quot;cn=&quot; ++ attributes.uriParams.'email' ++ &quot;,ou=Cidadaos,dc=semge,dc=poc&quot;]"/>
		<ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/tls http://www.mulesoft.org/schema/mule/tls/current/mule-tls.xsd http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd" doc:id="831cd678-226c-40e1-944a-ab135df060e4">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
import * from dw::core::Strings
---
{
  nome: substringBefore(payload.userPrincipalName, "."),
  sobrenome: payload.sn,
  cpf: payload.uid,
  email: payload.mail,
  senha: payload.userPassword,
  termos: true
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
	<flow name="get:\reset\(email)" doc:id="31d75776-159a-4cef-9128-f21e8f86b5aa" >
		<ee:transform doc:name="Transform Message" doc:id="bf0adac3-ca29-4738-8d89-46c4b9ef899f" >
			<ee:message >
				<ee:set-payload ><![CDATA[attributes.uriParams.'email']]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<ldap:lookup doc:name="Lookup" doc:id="fea01f0a-942f-45e2-835c-a29f7d79eb3d" dn="#[&quot;cn=&quot; ++ attributes.uriParams.'email' ++ &quot;,ou=Cidadaos,dc=semge,dc=poc&quot;]" config-ref="LDAP_Configuration"/>
		<set-variable value="#[payload.mail]" doc:name="Set Variable" doc:id="fede37e7-40df-4cf3-8f50-78764d149781" variableName="email"/>
		<email:send doc:name="Send" doc:id="a271e98a-723c-49e7-82a5-055110b67e30" config-ref="Email_SMTP" fromAddress="${email.from}">
			<email:to-addresses >
				<email:to-address value="#[payload.mail]" />
			</email:to-addresses>
			<email:body >
				<email:content ><![CDATA[#["<div>Olá " ++ vars.email ++ ", Foi pedido para redefinir sua senha na COGEL. Por favor clique no link para redefinir: <br /><a href='LINK' target='_blank'>LINK</a><br /></div>"]]]></email:content>
			</email:body>
		</email:send>
		<ee:transform doc:name="Transform Message" doc:id="2f11bf0d-a213-4a93-b42c-0a389cc13aa1" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	message: "Email enviado com sucesso!"
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
	</flow>
